          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CustomerViewModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CustomerViewModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CustomerViewModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
